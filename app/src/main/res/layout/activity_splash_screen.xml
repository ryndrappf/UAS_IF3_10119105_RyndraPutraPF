<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="#455FF3">

    <RelativeLayout
        android:id="@+id/container_logo_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_splash"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/andro"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/name_logo_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_logo_splash"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_splash_label"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/aplikasi_komputasi_bergerak"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:textSize="30dp"/>
    </LinearLayout>

</RelativeLayout>